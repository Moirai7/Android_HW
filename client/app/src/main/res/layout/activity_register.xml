<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/register_background"
    tools:context="com.moirai.view.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/register_top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <EditText
            android:id="@+id/register_id_EditView"
            android:background="@mipmap/register_id"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingLeft="60dp"
            android:layout_alignBottom="@+id/register_password1_EditView"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/register_password1_EditView"
            android:background="@mipmap/register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/register_id_EditView"
            android:layout_alignStart="@+id/register_id_EditView" />

        <EditText
            android:id="@+id/register_password2_EditView"
            android:background="@mipmap/register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:layout_marginTop="48dp"
            android:inputType="numberPassword"
            android:layout_alignTop="@+id/register_password1_EditView"
            android:layout_alignLeft="@+id/register_id_EditView"
            android:layout_alignStart="@+id/register_id_EditView" />

        <Spinner
            android:background="@mipmap/register_type"
            android:id="@+id/register_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:clickable="true"
            android:entries="@array/register_type"
            android:layout_below="@+id/register_password1_EditView"
            android:layout_alignLeft="@+id/register_password2_EditView"
            android:layout_alignStart="@+id/register_password2_EditView">
            </Spinner>
        </RelativeLayout>

        <Button
            android:id="@+id/register_createButton"
            android:background="@mipmap/register_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"/>

</RelativeLayout>
